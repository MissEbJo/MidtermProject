<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="JPAFomoGaming">
	<provider>org.hibernate.jpa.HibernatePersistenceProvider
    </provider>
		<class>com.skilldistillery.fomogaming.entities.BoardGame</class>
		<class>com.skilldistillery.fomogaming.entities.Book</class>
		<class>com.skilldistillery.fomogaming.entities.Comment</class>
		<class>com.skilldistillery.fomogaming.entities.Developer</class>
		<class>com.skilldistillery.fomogaming.entities.GameSeries</class>
		<class>com.skilldistillery.fomogaming.entities.Genre</class>
		<class>com.skilldistillery.fomogaming.entities.Movie</class>
		<class>com.skilldistillery.fomogaming.entities.Platform</class>
		<class>com.skilldistillery.fomogaming.entities.StreamingService</class>
		<class>com.skilldistillery.fomogaming.entities.TvShow</class>
		<class>com.skilldistillery.fomogaming.entities.User</class>
		<class>com.skilldistillery.fomogaming.entities.VideoGame</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/fomogaming?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=US/Mountain" />
			<property name="javax.persistence.jdbc.user" value="fomouser" />
			<property name="javax.persistence.jdbc.password"
				value="fomouser" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.provider_class"
				value="org.hibernate.connection.C3P0ConnectionProvider" />

			<property name="hibernate.c3p0.max_size" value="5" />
			<property name="hibernate.c3p0.min_size" value="0" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.timeout" value="60" />
		</properties>
	
	
	
	
	
	
	
	
	
	
	
	
	</persistence-unit>
</persistence>
